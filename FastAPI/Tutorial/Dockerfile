# ------------------------------------------------------------------------------
# Base image
# ------------------------------------------------------------------------------
FROM python:3.10
# ------------------------------------------------------------------------------
# Install Server
# ------------------------------------------------------------------------------

COPY ./app /app
WORKDIR /app

# ------------------------------------------------------------------------------
# PORT EXPOSE
# ------------------------------------------------------------------------------
EXPOSE 80
# ------------------------------------------------------------------------------
# Install dependencies
# ------------------------------------------------------------------------------
COPY requirements.txt /tmp/requirements.txt
RUN python3 -m pip install -r /tmp/requirements.txt

 
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "80"]